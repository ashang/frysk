${src}/TestCredits.py ${src}/another_new_session.xml
${src}/TestLicense.py ${src}/another_new_session.xml
${src}/TestCreateObserversfromDataModel.py ${src}/another_new_session.xml ${src}/new_fork_custom_observer.xml
