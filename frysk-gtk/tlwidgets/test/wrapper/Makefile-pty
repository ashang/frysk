     JAVA_RT_JAR = /usr/lib/jvm/java-1.4.2-gcj-1.4.2.0/jre/lib/rt.jar
         GTK_JAR = /usr/share/java/gtk2.8.jar
        GLIB_JAR = /usr/share/java/glib0.2.jar
   FRYSK_SYS_JAR = ../../../../../frysk-build/frysk-sys/frysk-sys.jar
  FRYSK_SYS_PATH = ../../../../../frysk-build/frysk-sys
    CLASSPATH=.:$(JAVA_RT_JAR):$(GTK_JAR):$(GLIB_JAR):$(FRYSK_SYS_JAR)

   LD_LIBRARY_PATH=$(FRYSK_SYS_PATH):/usr/local/lib
#   LD_LIBRARY_PATH=.:/usr/local/qt/lib:/usr/local/lib

#	LD_LIBRARY_PATH=$(LD_LIBRARY_PATH) gij -cp $(CLASSPATH):$(FRYSK_SYS_PATH) PtyTest

all::run

PtyTest.class: PtyTest.java
	CLASSPATH=$(CLASSPATH) gcj -C $<

run: PtyTest.class
	LD_LIBRARY_PATH=$(LD_LIBRARY_PATH) gij  PtyTest

clean:
	rm -f *.class
